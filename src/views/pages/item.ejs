<%- include('../partials/head') %>
  <form class="confirm-deletion-form hidden" action="/items/<%= itemData.id %>/delete-item" method="post">
    <label class="confirm-deletion-form__label">
      <p>Please enter password to delete:</p>
      <input class="confirm-deletion-form__input" type="password" name="delete-password" required />
    </label>
    <div class="confirm-deletion-form__buttons-wrapper">
      <button class="delete-button" type="submit">Delete</button>
      <button class="cancel-button" type="reset" onclick="toggleShowConfirmDeletionForm()">Cancel</button>
    </div>
  </form>
  <div class="item-wrapper">
    <% if (itemData.image) {%>
      <img class="item__image" src="<%= itemData.image %>" alt="<%= title %>">
    <% } %>
    <h2 class="item__title"><%= title %></h2>
    <p class="item__price">$<%= itemData.price.toFixed(2) %></p>
    <p class="item__description"><%= itemData.description %></p>
    <div class="item__controls-wrapper">
      <a class="update-item-link" href="/items/<%= itemData.id %>/update-item">
        Edit item
      </a>
      <button class="delete-button" type="button" onclick="toggleShowConfirmDeletionForm()">Delete item</button>
    </div>
  </div>
<%- include('../partials/footer') %>